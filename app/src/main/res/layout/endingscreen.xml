<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_screen"
    tools:context=".View.EndingScreen"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="1."/>
            <TextView
                android:id="@+id/score_name_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_score_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_date_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Hi"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="2."/>
            <TextView
                android:id="@+id/score_name_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_score_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_date_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Hi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="3."/>
            <TextView
                android:id="@+id/score_name_3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_score_3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_date_3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Hi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="4."/>
            <TextView
                android:id="@+id/score_name_4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_score_4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_date_4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Hi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="5."/>
            <TextView
                android:id="@+id/score_name_5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_score_5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_date_5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Hi"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/restart_game_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart Game"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="517dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="398dp"
            android:layout_marginEnd="86dp"
            android:layout_marginBottom="62dp"
            android:rating="5"
            android:focusable="false"
            app:layout_constraintBottom_toTopOf="@+id/restart_game_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/win_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="147dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="147dp"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="@string/you_won"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="60sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/ratingBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lose_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="147dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="147dp"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="@string/you_lose"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="60sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/ratingBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
