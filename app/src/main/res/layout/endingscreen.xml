<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.EndingScreen"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="1."/>
            <TextView
                android:id="@+id/score_name_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_score_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_date_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hi"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="2."/>
            <TextView
                android:id="@+id/score_name_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_score_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_date_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="3."/>
            <TextView
                android:id="@+id/score_name_3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_score_3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_date_3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="4."/>
            <TextView
                android:id="@+id/score_name_4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_score_4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_date_4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="5."/>
            <TextView
                android:id="@+id/score_name_5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_score_5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hi"/>
            <TextView
                android:id="@+id/score_date_5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hi"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/restart_game_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart Game"
        tools:ignore="MissingConstraints" />

</LinearLayout>
